. $FARM/proxy
LOCCOD=${1:-08854}
curl -s http://rss.accuweather.com/rss/liveweather_rss.asp\?metric\=0\&locCode\=$LOCCOD \ | sed -n '/Currently:/ s/.*: \(.*\): \([0-9]*\)\([CF]\).*/\2Â°\3, \1/p'

